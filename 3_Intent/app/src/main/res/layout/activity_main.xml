<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        >
        <EditText
            android:id="@+id/web_url_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:textSize="16sp"
            android:hint="Url"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/web_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN WEBSITE"
            android:layout_marginTop="8dp"
            />

        <EditText
            android:id="@+id/location_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:textSize="16sp"
            android:hint="Location"
            android:layout_marginTop="32dp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/open_location_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN LOCATION"
            android:layout_marginTop="8dp"
            />

        <EditText
            android:id="@+id/share_text_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:hint="Some Message..."
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/share_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE THIS TEXT"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>